<%- include('../partials/header', { title: 'New Planet' }) %>

<h2>Create Planet</h2>
<form action="/planets-ui" method="POST" enctype="multipart/form-data">
  <label>Name: <input type="text" name="name" required></label><br>
  <label>Type: <input type="text" name="type"></label><br>
  <label>Orbital Period: <input type="number" name="orbitalPeriod" step="any"></label><br>
  <label>Size: <input type="text" name="size"></label><br>
  <label>Description:<br>
    <textarea name="description" rows="4" cols="50"></textarea>
  </label><br>
  <label>Image: <input type="file" name="image"></label><br>
  <button type="submit">Create</button>
</form>

<%- include('../partials/footer') %>
